<?xml version="1.0"?>
<config>
    <modules>
        <Jing_Log>
            <version>0.1.1</version>
        </Jing_Log>
    </modules>
    <frontend>
        <routers>
            <log>
                <use>standard</use>
                <args>
                    <module>Jing_Log</module>
                    <frontName>log</frontName>
                </args>
            </log>
        </routers>
        <layout>
            <updates>
                <log>
                    <file>log.xml</file>
                </log>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <log>
                <use>admin</use>
                <args>
                    <module>Jing_Log</module>
                    <frontName>log</frontName>
                </args>
            </log>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <log module="log">
                <title>Log</title>
                <sort_order>80</sort_order>
                <children>
                    <items module="log">
                        <title>Manage Items</title>
                        <sort_order>0</sort_order>
                        <action>log/adminhtml_log</action>
                    </items>
                </children>
            </log>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <JIng_Log>
                            <title>Log Module</title>
                            <sort_order>10</sort_order>
                        </JIng_Log>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <log>
                    <file>log.xml</file>
                </log>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <log>
                <class>Jing_Log_Model</class>
                <resourceModel>log_resource</resourceModel>
            </log>
            <log_resource>
                <class>Jing_Log_Model_Resource</class>
                <entities>
                    <log>
                        <table>log</table>
                    </log>
                </entities>
            </log_resource>
        </models>
        <resources>
            <log_setup>
                <setup>
                    <module>Jing_log</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </log_setup>
            <log_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </log_write>
            <log_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </log_read>
        </resources>
        <blocks>
            <log>
                <class>Jing_Log_Block</class>
            </log>
        </blocks>
        <helpers>
            <log>
                <class>Jing_Log_Helper</class>
            </log>
        </helpers>
    </global>
</config>