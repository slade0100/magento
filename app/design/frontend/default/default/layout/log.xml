<?xml version="1.0"?>
<layout version="0.1.0">
    <log_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page.2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="log/log" name="log" template="log/log.phtml"/>
        </reference>
    </log_index_index>
    <log_index_view>
        <reference name="content">
            <block type="log/log" name="log" template="log/view.phtml"/>
        </reference>
    </log_index_view>
</layout>